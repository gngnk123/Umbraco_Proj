@{
	Layout = "Master.cshtml";
}

<body>

    <div class="container text-center" style="padding-top: 30px;">
        <div class="row">
            <div class="col">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"></span>
                    <input type="text" class="form-control" placeholder="Make" aria-label="Make" aria-describedby="basic-addon1">
                </div>
            </div>
            <div class="col">
                	<div class="input-group mb-3">
		<span class="input-group-text" id="basic-addon1"></span>
		<input type="text" class="form-control" placeholder="Model" aria-label="Username" aria-describedby="basic-addon1">
	</div>
            </div>
            <div class="col">
                <div class="input-group mb-3">
      <label for="disabledSelect" class="form-label"></label>
                    <select id="disabledSelect" class="form-select">
                        @for (var i = (@DateTime.Now.Year - 100); i < @DateTime.Now.Year; i++){
            <option>@i</option>
            i++;
                        }
            </select>
          </div>
            </div>
        </div>
    </div>






        <div class="mb-3">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="disabledFieldsetCheck" disabled>
        <label class="form-check-label" for="disabledFieldsetCheck">
          Can't check this
        </label>
      </div>
    </div>



<div class="input-group">
  <span class="input-group-text">With textarea</span>
