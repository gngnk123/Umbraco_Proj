@inherits UmbracoViewPage<IHeaderProperties>

@{
    var HomePage = Umbraco.AssignedContentItem.AncestorOrSelf<HomePage>();
    var Children = HomePage.MainNavigation;
}

<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="@Model.Icon.Url()" alt="Car" width="30" height="24" href="/">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                @if (Children != null && Children.Any())
                {
                    foreach(var item in Children)
                    {
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="@item.Url">@item.Name</a></li>
                    }
                    }
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>